    <script type="text/javascript">

        $(document).ready(function () {
            $('#side-menu li a').removeClass('active');
            $("#ViewDashboard").addClass("active");
        });
        $(function () {
            $("#ViewDashboard").click(function () {
                $('#side-menu li a').removeClass('active');
                $("#ViewDashboard").addClass("active");
            });
        });

    </script>
    <script type="text/javascript">
        $(function () {
            var chat = $.connection.notificationHub;
            chat.client.broadcastNotification = function (userId, message) {
                if (userId == "UserID") {
                    var ct = parseInt($("#notification-ctor-label").html());
                    ct++;
                    $("#notification-ctor-label").html(ct);
                }
            };
            $.connection.hub.start().done(function () { });
        });
    </script>

