@{
    var myModel = Feromon.Web.Helpers.RazorHelper.BuildModel_Gamification_ArrowPartial(HttpContext.Current.User.Identity.Name);
}
<a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <img style="width: 30px" class="brand-logo" src="~/Images/arrow.png" alt="" />
    <span class="notification-icon label label-danger">@myModel.Count</span>
</a>

<ul class="dropdown-menu dropdown-tasks">
    @for (int i = 0; i < myModel.Count; i++)
    {
        <li>
            <a href="#">
                <div>
                    <i class="fa fa-angle-double-right"></i> Arrow @i
                    <span class="pull-right text-muted small">4 minutes ago</span>
                </div>
            </a>
        </li>
        <li class="divider"></li>
    }
    <li>
        <a class="text-center" href="@Url.Action("BuyArrow", "Payment")">
            <span class="btn btn-primary btn-block">
                <small id="btn_buyArrow">Buy arrow</small>
            </span>
        </a>
    </li>
</ul>
<!-- /.dropdown-alerts -->
